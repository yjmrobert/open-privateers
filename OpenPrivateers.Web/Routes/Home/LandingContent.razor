@using OpenPrivateers.Web.Theme
<MudGrid>
    <MudItem xs="2">
        <MudNavMenu>
            <MudText Typo="Typo.body2">
                Select a ship class to browse through all ships of that class.
            </MudText>
            <MudDivider Class="my-2"/>
            <MudPaper Style="@($"--mud-palette-action-default-hover: {OpenPrivateersTheme.DarkActionHover};")">
                @foreach (var shipClass in _shipClasses)
                {
                    <MudNavLink Href="@($"/ships/{shipClass}")" Class="d-flex align-items-center">
                        <MudStack Justify="Justify.SpaceBetween" Row>
                            <MudStack AlignItems="AlignItems.Center" Spacing="0" Row>
                                <MudImage Src="@($"/images/ship-icons/{shipClass}Icon.webp")" Height="16" Width="16" ObjectFit="ObjectFit.Cover"/>
                                <MudText Typo="Typo.body2" Class="ml-2">@shipClass</MudText>
                            </MudStack>
                            <MudIcon Icon="@Icons.Material.Outlined.KeyboardDoubleArrowRight"/>
                        </MudStack>
                    </MudNavLink>
                }
            </MudPaper>

        </MudNavMenu>
    </MudItem>
    <MudItem xs="7">
        <MudStack>
            <MudText Typo="Typo.h2">Ship of the Week</MudText>
            <MudPaper Class="pa-4">
                <MudStack Row>
                    <MudIcon Icon="@Icons.Material.Outlined.DocumentScanner"/>
                    <MudText Typo="Typo.body2">
                        The FG300 is a generic multi-role frigate equipped with 3 generic rapid-fire cannons, enabling it to take on various offensive and defensive missions. It is designed with a large number of universal components and a simple structure, making it easy to manufacture. It is an ideal recon ship.
                    </MudText>
                </MudStack>
            </MudPaper>
            <ShipPreviewCard/>
        </MudStack>
    </MudItem>
    <MudItem xs="3">
        <MudStack>
            <MudText Typo="Typo.h2">Recent News</MudText>
            @foreach (var i in Enumerable.Range(0, 5))
            {
                <NewsReport />
            }
        </MudStack>
    </MudItem>

</MudGrid>


@code {

    private List<string> _shipClasses = new()
    {
        "Fighter",
        "Corvette",
        "Frigate",
        "Destroyer",
        "Cruiser",
        "Battlecruiser",
        "Carrier",
        "Auxiliary",
        "Utility",
    };
}